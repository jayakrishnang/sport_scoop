<%= render partial: 'matches/recent_match', locals: { match: @match } %>
<% if @scorecard.present? %>
    <!-- post item-->
    <div class="post-item intro-text boxed">
        <h2 class="post-title"><a href="#"><%= @scorecard.team_1.short_name %> <%= @scorecard.team_1_summary %></a></h2>
        <h6 class="post-subtitle">Run Rate: <%= @scorecard.team_1_run_rate %></h6>
        <div class="post-desc">
            <table class="table">
                <tr>
                    <th>BATSMEN</th>
                    <th/>
                    <th>RUNS</th>
                    <th>BALLS</th>
                    <th>FOURS</th>
                    <th>SIXES</th>
                    <th>STRIKE RATE</th>
                </tr>
                <% JSON.parse(@scorecard.team_1_batting).each do |score| %>
                    <tr>
                        <% score.each do |value| %>
                            <td><%= value %></td>
                        <% end %>
                    </tr>
                <% end %>
            </table>
        </div>
        <h6 class="post-subtitle">Extras: <%= @scorecard.team_1_extras %></h6>
        <div class="post-desc">
            <table class="table">
                <tr>
                    <th>BOWLER</th>
