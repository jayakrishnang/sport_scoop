<div class="sidebar zero-padding-bottom">
    <!-- Tabs -->
    <div class="tabs-framed tabs-framed-bottom">
        <div class="tab-content boxed">
            <div class="tab-pane fade in active bg-image-star" id="popular2">
                <h2 class="tab-title"><a href="#">POINTS</a></h2>
                <h6 class="tab-subtitle">TABLE</h6>
                <div class="tab-image"><img src="images/temp/tab-img-1.jpg" alt="" /></div>
                <table>
                    <tr>
                        <th width="30%"><h6>Name</h6></th>
                        <th width="20%" class="text-center"><h6>Won</h6></th>
                        <th width="30%" class="text-center"><h6>Lost</h6></th>
                        <th width="20%" class="text-center"><h6>Points</h6></th>
                    </tr>
                    <% Team.all.each do |team| %>
                        <tr>
                            <td class="post-subtitle"><%= team.short_name %></td>
                            <td align="center"><%= team.wins %></td>
                            <td align="center"><%= team.losses %></td>
                            <td align="center"><%= team.points %></td>
                        </tr>
                    <% end %>
                </table>
            </div>
            <hr/>
        </div>
    </div>
    <!--/ Tabs -->
</div>